    mu = models.ForeignKey(User, related_name='m_mankeu', editable=False, null=True, blank=True)
    note = models.CharField(max_length=200, null=True, blank=True)
    
    class Meta:
        db_table = 'manopkeu'
        verbose_name = 'ManopKeu'
        verbose_name_plural = verbose_name

