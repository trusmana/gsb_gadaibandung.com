                akad.save()
                jurnal_akad_barang_sama_non_anggota(akad, request.user)
                jurnal_pelunasan_barang_sama_non_anggota_lebih(akad, request.user)
                messages.add_message(request, messages.INFO, 'Jurnal Terposting Dengan baik 2') 
