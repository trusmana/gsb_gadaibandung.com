            kasir = KasirGerai(kasir_id = akad.id,nilai = int(akad.nilai_gu) + int(akad.denda_gu) + int(akad.jasa_gu) + \
                int(akad.jurnal_titipan),tanggal = sekarang ,status=2)
            kasir.save()
